{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "astro-base.mkz.dev",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maekzi/astro-base"
  },
  "license": "MIT",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "pnpm run format:code",
    "format:code": "prettier --write **/*.{cjs,mjs,ts,md,mdx,json,astro,css,scss} --ignore-path --plugin=prettier-plugin-astro --plugin=prettier-plugin-tailwindcss",
    "lint": "eslint . --report-unused-disable-directives",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/mdx": "^4.0.5",
    "@astrojs/react": "^4.1.4",
    "@astrojs/sitemap": "^3.2.1",
    "@astrojs/tailwind": "^5.1.4",
    "@iconify-json/mdi": "^1.2.2",
    "@types/react": "^19.0.7",
    "astro": "^5.1.6",
    "astro-compress": "^2.3.6",
    "astro-icon": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "focus-trap": "^7.6.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@astrojs/ts-plugin": "^1.10.4",
    "@eslint/js": "^9.18.0",
    "@types/eslint__js": "^8.42.3",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "sass": "^1.83.4",
    "svgo": "^3.3.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}